<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/constraint"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_send_broadcastreceiver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="发送广播"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:background="@color/colorPrimary"/>


    <Button
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="EditText"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/startForResut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/editText"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="startForResut"/>

    <Button
        android:id="@+id/smothScrll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/startForResut"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="smothScrll"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/anima"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/smothScrll"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="anima"/>

    <Button
        android:id="@+id/fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/editText"
        android:text="fragment"/>

    <Button
        android:id="@+id/gesture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/fragment"
        app:layout_constraintBottom_toTopOf="@id/editText"
        android:text="gesture"/>

    <Button
        android:id="@+id/grid_rv_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/gesture"
        app:layout_constraintBottom_toTopOf="@id/editText"
        android:text="grid+frag"/>

    <Button
        android:id="@+id/viewtest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/grid_rv_fragment"
        app:layout_constraintBottom_toTopOf="@id/editText"
        android:text="viewtest"/>

    <Button
        android:id="@+id/bitmap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/viewtest"
        android:text="bitmap"/>

    <Button
        android:id="@+id/interface_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/bitmap"
        app:layout_constraintBottom_toTopOf="@id/viewtest"
        android:text="interface"/>

    <Button
        android:id="@+id/thread"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/interface_test"
        app:layout_constraintBottom_toTopOf="@id/viewtest"
        android:text="thread"/>

    <Button
        android:id="@+id/dispatch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/thread"
        app:layout_constraintBottom_toTopOf="@id/viewtest"
        android:text="dispatch"/>


</android.support.constraint.ConstraintLayout>